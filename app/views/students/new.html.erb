<h3>CREATE A STUDENT</h3>

<%= form_with(model: @student, local: true) do |f| %>
  <div class="form-group">
    
    <%= f.text_field :name, class: "form-control name-input", placeholder: "Enter Your Name" %>
  </div>
  <div class="form-group">
   
    <%= f.text_field :roll_no, class: "form-control", placeholder: "Enter Your Roll No" %>
  </div>
  <div class="form-group">
 
    <%= f.text_field :age, class: "form-control", placeholder: "Enter Your Age" %>
  </div>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>

