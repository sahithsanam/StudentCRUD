<h1>Students</h1>



<table class="student-table" border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Roll Number</th>
      <th>Age</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student_path(student) %></td>
        <td><%= student.roll_no %></td>
        <td><%= student.age %></td>
        <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-primary" %></td>
        <td>
          <%= button_to "Remove", student_path(student), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(url: students_path, method: "get", local: true) do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search students..." %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
